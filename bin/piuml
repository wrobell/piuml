#!/usr/bin/env python3

from piuml import generate

import sys
import os.path
import optparse

usage = """\
%prog [OPTION]... FILE...

Process files written in piUML language and generate UML diagrams in PDF,
SVG or PNG format.\
"""

parser = optparse.OptionParser(usage=usage)
parser.add_option('--type', '-T',
        action='store',
        type='string',
        dest='filetype',
        default='pdf',
        help='Type of output file: pdf (default), svg or mp (Metapost)')

options, args = parser.parse_args()

if len(args) < 1:
    parser.print_help()
    sys.exit(1)

for fn in args:
    fout, ext = os.path.splitext(fn)
    ft = options.filetype
    with open(fn) as f:
        generate(f, fout + '.' + ft, ft)

